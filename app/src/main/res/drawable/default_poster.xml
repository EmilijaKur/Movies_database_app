<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#CCCCCC" /> <!-- Light gray background -->

    <!-- Border -->
    <stroke android:width="2dp" android:color="#888888" /> <!-- Darker gray border -->

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>

